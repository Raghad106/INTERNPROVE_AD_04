<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.SelectXorOFragment"
    android:background="@color/black_200"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/TVTittle"
        style="@style/TittleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Select X or O"
        />

    <Button
        android:id="@+id/BTX"
        style="@style/TicTacToeButtonXorO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVTittle"
        android:text="Select X"
        />

    <Button
        android:id="@+id/BTO"
        style="@style/TicTacToeButtonXorO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTX"
        android:text="Select O"
        />
</androidx.constraintlayout.widget.ConstraintLayout>